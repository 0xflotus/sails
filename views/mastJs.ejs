<%
// This file is only used when config.environment == "development"
//
// Generate links to the css files from the components dir
fs.readdirSync('components').forEach(function(filename) {

	if ((filename[0] === '_')) {
		return;
	}
	
	var filepath = path.join('/stylesheets', filename);
	
	// Build list of main css files
	if (filename.match(/.+\.css$/g)) {
		%>
		<link rel="stylesheet" href="<%- filepath %>" type="text/css"/>
		<%
	}
});
%>